<body>

	<div id="mainContainer" class="clearfix">

		<!--begain header-->
		<header>
			<div class="middleHeader">
				<div class="container">

					<div class="middleContainer clearfix">

					<div class="siteLogo pull-left">
						<h1><a href="/">ShopFine</a></h1>
